@model IEnumerable<ASP.NET_MVC_E_Ticaret.Models.CategoryViewModel>

<div class="widget">
    <h4>Kategori</h4>
    <ul class="list-unstyled link-list">
        @foreach (var item in Model)
        {
            <li><i class="fa fa-angle-right fa-fw" aria-hidden="true"></i> <a href="/Product/List/@item.Id">@item.Name <span class="pull-right">(@item.Count)</span></a></li>
        }
    </ul>
</div>
